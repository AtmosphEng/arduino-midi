/**
 * @file MidiFromUDP
 * @author Phil Schatzmann
 * @brief Example of handling midi input over udp - sound beneration requires arduino-stk
 * 
 * @copyright Copyright (c) 2021
 * 
 */
#include <WiFi.h>
#include <WiFiClient.h>
#include <WiFiUdp.h>
#include <ArdMidiStreamIn.h>
#include <ArdMidiVoicer.h>
#include "Clarinet.h"

using namespace midi;
using namespace stk;

WiFiUDP udp;
Clarinet clarinet(440);
StkMidiVoicer voicer;
ArdMidiEventHandler handler(&voicer);
ArdMidiStreamIn in(udp, handler );
int localPort = 9000;

void setup() {
  Serial.begin(115200);
  
  WiFi.begin(SSID, PWD);
  while (WiFi.status() != WL_CONNECTED) {
    Serial.print('.');
    delay(1000);
  }

  Serial.print("Connected to IP address: ");
  Serial.println(WiFi.localIP());  

  voicer.addInstrument(&clarinet,0);
  udp.begin(localPort);
}

void loop() {
  in.loop();
}

